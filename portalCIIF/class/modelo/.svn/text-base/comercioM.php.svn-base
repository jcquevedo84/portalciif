		function actdes($id="",$est="")
		{
			$resulQuery="";
    		$objPG= new consultas(__FILE__,__CLASS__,__FUNCTION__);
	    	$resulQuery=$objPG->actualizacion("0,".$est.";","0,".$id.";",__LINE__);
			unset($objPG);
			return "La empresa  ha cambiado de estado";
		}
